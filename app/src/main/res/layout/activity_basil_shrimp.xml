<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.poweron_studio.eathealthy.BasilShrimp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/basilshrimpTitle"
        android:id="@+id/basilshrimpTitle"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/basilshrimpPic"
        android:src="@drawable/gluten8"
        android:cropToPadding="true"
        android:contentDescription="@string/basilshrimpPic"
        android:layout_below="@+id/basilshrimpTitle"
        android:layout_alignRight="@+id/basilshrimpTitle"
        android:layout_alignEnd="@+id/basilshrimpTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/basilshrimp_recipe"
        android:id="@+id/basilshrimpText"
        android:textSize="8sp"
        android:layout_below="@+id/ingbasilshrimp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ingText"
        android:id="@+id/ingbasilshrimp"
        android:textSize="25sp"
        android:layout_below="@+id/basilshrimpPic"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/basilshrimp_directions"
        android:id="@+id/basilshrimp_directions"
        android:textSize="8sp"
        android:singleLine="false"
        android:layout_below="@+id/basilshrimpText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
