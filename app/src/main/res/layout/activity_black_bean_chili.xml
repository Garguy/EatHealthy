<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.poweron_studio.eathealthy.BlackBeanChili">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/blackbeanTitle"
        android:id="@+id/blackbeanTitle"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/blackbeanPic"
        android:src="@drawable/gluten7"
        android:cropToPadding="true"
        android:contentDescription="@string/blackbeanPic"
        android:layout_below="@+id/blackbeanTitle"
        android:layout_alignRight="@+id/blackbeanTitle"
        android:layout_alignEnd="@+id/blackbeanTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/blackbean_recipe"
        android:id="@+id/blackbeanText"
        android:textSize="8sp"
        android:layout_below="@+id/ingblackbean"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ingText"
        android:id="@+id/ingblackbean"
        android:textSize="25sp"
        android:layout_below="@+id/blackbeanPic"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blackbean_directions"
        android:id="@+id/blackbean_directions"
        android:textSize="8sp"
        android:singleLine="false"
        android:layout_below="@+id/blackbeanText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
