<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.poweron_studio.eathealthy.Dinner"
    android:background="#BAA378">

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/beefburger_btn"
        android:id="@+id/beefburgerButton"
        android:onClick="beefburgerOnClick"
        android:background="#21B6A8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/stroganoff_btn"
        android:id="@+id/stroganoffButton"
        android:onClick="stroganoffOnClick"
        android:background="#21B6A8"
        android:layout_below="@+id/beefburgerButton"
        android:layout_alignLeft="@+id/beefburgerButton"
        android:layout_alignStart="@+id/beefburgerButton"
        android:layout_marginBottom="5dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/steak_btn"
        android:id="@+id/steakButton"
        android:onClick="steakOnClick"
        android:background="#21B6A8"
        android:layout_below="@+id/stroganoffButton"
        android:layout_alignLeft="@+id/stroganoffButton"
        android:layout_alignStart="@+id/stroganoffButton"
        android:layout_marginBottom="5dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/arugula_btn"
        android:id="@+id/arugulaButton"
        android:onClick="arugulaOnClick"
        android:background="#21B6A8"
        android:layout_below="@+id/steakButton"
        android:layout_alignLeft="@+id/steakButton"
        android:layout_alignStart="@+id/steakButton"
        android:layout_marginBottom="5dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/spaghetti_btn"
        android:id="@+id/spaghettiButton"
        android:onClick="spaghettiOnClick"
        android:background="#21B6A8"
        android:layout_below="@+id/arugulaButton"
        android:layout_alignLeft="@+id/arugulaButton"
        android:layout_alignStart="@+id/arugulaButton"
        android:layout_marginBottom="5dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/sourchicken_btn"
        android:id="@+id/sourchickenButton"
        android:onClick="sourchickenOnClick"
        android:background="#21B6A8"
        android:layout_below="@+id/spaghettiButton"
        android:layout_alignLeft="@+id/spaghettiButton"
        android:layout_alignStart="@+id/spaghettiButton"
        android:layout_marginBottom="5dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/wrapasp_btn"
        android:id="@+id/wrapaspButton"
        android:onClick="wrapaspOnClick"
        android:background="#21B6A8"
        android:layout_below="@+id/sourchickenButton"
        android:layout_alignLeft="@+id/sourchickenButton"
        android:layout_alignStart="@+id/sourchickenButton"
        android:layout_marginBottom="5dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/cajunhal_btn"
        android:id="@+id/cajunhalButton"
        android:onClick="cajunhalOnClick"
        android:background="#21B6A8"
        android:layout_below="@+id/wrapaspButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
