<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.poweron_studio.eathealthy.CoconutCookies">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/coconutcookieTitle"
        android:id="@+id/coconutcookieTitle"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/coconutcookiePic"
        android:src="@drawable/dessert2"
        android:cropToPadding="true"
        android:contentDescription="@string/coconutcookiePic"
        android:layout_below="@+id/coconutcookieTitle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/coconutcookie_recipe"
        android:id="@+id/coconutcookieText"
        android:textSize="10sp"
        android:layout_below="@+id/ingcoconutcookie"
        android:layout_alignRight="@+id/ingcoconutcookie"
        android:layout_alignEnd="@+id/ingcoconutcookie" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ingText"
        android:id="@+id/ingcoconutcookie"
        android:textSize="25sp"
        android:layout_below="@+id/coconutcookiePic"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coconutcookie_directions"
        android:id="@+id/coconutcookie_directions"
        android:textSize="10sp"
        android:singleLine="false"
        android:layout_below="@+id/coconutcookieText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"/>

</RelativeLayout>
