<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.poweron_studio.eathealthy.SourChicken">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/sourchickenTitle"
        android:id="@+id/sourchickenTitle"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/sourchickenPic"
        android:src="@drawable/dinner5"
        android:cropToPadding="true"
        android:contentDescription="@string/sourchickenPic"
        android:layout_below="@+id/sourchickenTitle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/sourchicken_recipe"
        android:id="@+id/sourchickenText"
        android:textSize="8sp"
        android:layout_below="@+id/ingsourchicken"
        android:layout_alignRight="@+id/ingsourchicken"
        android:layout_alignEnd="@+id/ingsourchicken"
        android:layout_marginTop="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ingText"
        android:id="@+id/ingsourchicken"
        android:textSize="20sp"
        android:layout_below="@+id/sourchickenPic"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sourchicken_directions"
        android:id="@+id/sourchicken_directions"
        android:textSize="10sp"
        android:singleLine="false"
        android:layout_below="@+id/sourchickenText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"/>

</RelativeLayout>
