<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.poweron_studio.eathealthy.ChocolateCookies">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/chocolatecookiesTitle"
        android:id="@+id/chocolatecookiesTitle"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/chocolatecookiesPic"
        android:src="@drawable/gluten5"
        android:cropToPadding="true"
        android:contentDescription="@string/chocolatecookiesPic"
        android:layout_below="@+id/chocolatecookiesTitle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/chocolatecookies_recipe"
        android:id="@+id/chocolatecookiesText"
        android:textSize="8sp"
        android:layout_below="@+id/ingchocolatecookies"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ingText"
        android:id="@+id/ingchocolatecookies"
        android:textSize="25sp"
        android:layout_below="@+id/chocolatecookiesPic"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chocolatecookies_directions"
        android:id="@+id/chocolatecookies_directions"
        android:textSize="8sp"
        android:singleLine="false"
        android:layout_below="@+id/chocolatecookiesText"
        android:layout_alignLeft="@+id/chocolatecookiesTitle"
        android:layout_alignStart="@+id/chocolatecookiesTitle"
        android:layout_marginTop="5dp"/>


</RelativeLayout>
