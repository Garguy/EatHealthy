<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.poweron_studio.eathealthy.RedPear">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/redpearTitle"
        android:id="@+id/redpearTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/redpearPic"
        android:src="@drawable/lunch4"
        android:cropToPadding="true"
        android:contentDescription="@string/fishtacoPic"
        android:layout_below="@+id/redpearTitle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/redpear_recipe"
        android:id="@+id/redpearText"
        android:textSize="12sp"
        android:layout_below="@+id/ingredpear"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ingText"
        android:id="@+id/ingredpear"
        android:textSize="30sp"
        android:layout_below="@+id/redpearPic"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/redpear_directions"
        android:id="@+id/redpear_directions"
        android:textSize="12sp"
        android:singleLine="false"
        android:layout_below="@+id/redpearText"
        android:layout_alignLeft="@+id/redpearPic"
        android:layout_alignStart="@+id/redpearPic"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
